@inherits LayoutComponentBase
@if (!Navigation.Uri.Contains("admin"))
{
    <header>
        <div class="banner-header">
            <div class="container">
                <img src="https://cdn.tgdd.vn/2021/09/banner/1200-44-1200x44-10.png"
                     alt="" />
            </div>
        </div>
        <div class="header-top">
            <div class="container">
                <a href="/" class="header-logo">
                    <i class="icon-logo"></i>
                </a>
                <div class="header__search">
                    <input id="skw"
                           type="text"
                           class="input-search"
                           placeholder="Bạn tìm gì..."
                           name="key"
                           autocomplete="off"
                           maxlength="100"
                           @bind-value="keyword" />
                    <button type="button" @onclick="SearchProduct">
                        <i class="icon-search"></i>
                    </button>
                    <div id="search-result" style="display: none">
                        <ul class="suggest_search"></ul>
                    </div>
                </div>
                <a href="/" class="header__history">Lịch sử đơn hàng</a>
                <div class="bordercol"></div>
                <a style="padding: 0 !important"
                   href="javascript:void(0)"
                   class="header__hot">
                </a>
                <div class="header__listtop">
                    <div class="bordercol"></div>
                    <div class="divitem">
                        <a href="/">24h<br />Công nghệ</a>
                    </div>
                    <div class="bordercol"></div>
                    <div class="divitem">
                        <a href="/">Hỏi Đáp</a>
                    </div>
                    <div class="bordercol"></div>
                    <div class="divitem">
                        <a href="/">Game App</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="header__main">
            <div class="container">
                <ul class="main-menu">
                    <li class="active">
                        <NavLink href="/"  Match="NavLinkMatch.All">
                            <span>Trang chủ</span>
                        </NavLink>
                    </li>
                    <li class="" >
                        <NavLink href="/category/1"  Match="NavLinkMatch.All">
                            <i class="icon-dienthoai"></i>
                            <span>Điện thoại</span>
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/category/2" Match="NavLinkMatch.All">
                            <i class="icon-laptop"></i>
                            <span>Laptop</span>
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/category/3" Match="NavLinkMatch.All">
                            <i class="icon-tablet"></i>
                            <span>Tablet</span>
                        </NavLink>
                    </li>
                    <li class="phukien">
                        <NavLink href="/category/4" Match="NavLinkMatch.All">
                            <i class="icon-phukien"></i>
                            <span>Phụ kiện</span>
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/category/5" Match="NavLinkMatch.All">
                            <i class="icon-dhthongminh"></i>
                            <span>Đồng hồ thông minh</span>
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/category/6" Match="NavLinkMatch.All">
                            <i class="icon-dhthoitrang"></i>
                            <span>Đồng hồ thời trang</span>
                        </NavLink>
                    </li>
                    <li class="pcmayin">
                        <NavLink href="/category/7" Match="NavLinkMatch.All">
                            <i class="icon-pcmayin"></i>
                            <span>PC, Máy in</span>
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    @Body
}
else
{
<div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/admin">
            
            <div class="sidebar-brand-text mx-3"><i class="icon-logo"></i></div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Nav Item - Dashboard -->
        <li class="nav-item active">
            <a class="nav-link " href="/admin">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Hàng hóa</span>
            </a>
        </li>

       

    </ul>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <!-- Sidebar Toggle (Topbar) -->
                <form class="form-inline">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                </form>

               
                

            </nav>
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">


                @Body
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
    
}
